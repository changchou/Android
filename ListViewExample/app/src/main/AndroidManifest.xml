<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jikexueyuan.listviewexample" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controllers.ArrayAdapterExampleActivity"
            android:label="ArrayAdapter示例" />
        <activity
            android:name=".controllers.ListActivityExampleActivity"
            android:label="ListActivity示例"
            android:theme="@style/Base.Widget.AppCompat.ActionBar" />
        <activity android:name=".controllers.CheckBoxesExampleActivity" >
        </activity>
        <activity android:name=".controllers.CustomListActivity"
            android:label="自定义列表示例">
        </activity>
    </application>

</manifest>
